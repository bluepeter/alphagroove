{
  "name": "alphagroove",
  "version": "0.1.0",
  "description": "A command-line research and strategy toolkit for exploring intraday trading patterns",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "alphagroove": "./dist/index.js"
  },
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "keywords": [
    "trading",
    "analysis",
    "market-data",
    "quant",
    "duckdb",
    "intraday"
  ],
  "author": "AlphaGroove Contributors",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "dev:start": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tsc --noEmit && eslint . --ext .ts && prettier --check \"src/**/*.ts\"",
    "lint:fix": "tsc --noEmit && eslint . --ext .ts --fix && pnpm format"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "duckdb": "1.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.14",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
