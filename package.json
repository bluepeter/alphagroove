{
  "name": "alphagroove",
  "version": "0.1.0",
  "description": "A command-line research and strategy toolkit for exploring intraday trading patterns",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "alphagroove": "./dist/index.js",
    "scout": "./dist/scout.js",
    "trade-levels": "./dist/trade-levels.js"
  },
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "keywords": [
    "trading",
    "analysis",
    "market-data",
    "quant",
    "duckdb",
    "intraday"
  ],
  "author": "AlphaGroove Contributors",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node --import ./scripts/register-esm-loader.mjs dist/index.js",
    "dev:start": "tsx src/index.ts",
    "scout": "tsx src/scout.ts",
    "levels": "tsx src/trade-levels.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tsc --noEmit && eslint . --ext .ts && prettier --check \"src/**/*.ts\"",
    "lint:fix": "tsc --noEmit && eslint . --ext .ts --fix && pnpm format"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.60.0",
    "canvas": "3.2.0",
    "chart.js": "4.5.0",
    "chartjs-node-canvas": "5.0.0",
    "commander": "^14.0.0",
    "csv-parse": "6.1.0",
    "dotenv": "17.2.1",
    "duckdb": "1.3.2",
    "js-yaml": "4.1.0",
    "sharp": "0.34.3",
    "vega-cli": "6.1.2",
    "vega-lite": "6.2.0",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@types/js-yaml": "4.0.9",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jiti": "2.5.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
